<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mode_and_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="4"
    android:gravity="center"
    android:background="@color/cardview_dark_background"
    tools:context="com.example.viktordluhos.my_senso_teleop_gui.Mode_and_test">

    <TextView
        android:text="Mode and Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        />

    <Button
        android:text="Teach mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_TeachMode"
        android:onClick="onClick_teach_mode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:layout_margin="10dp"
        />

    <Button
        android:text="Virtual Cube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_VirtualCube"
        android:onClick="onClick_virtual_cube"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:layout_margin="10dp"
        />

    <Button
        android:text="Vibrotac test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_VibrotacTest"
        android:onClick="onClick_VibrotacTest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:layout_margin="10dp"
        />

</LinearLayout>
