<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vibrotac_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context="com.example.viktordluhos.my_senso_teleop_gui.Vibrotac_test"
    android:weightSum="1">

    <TextView
        android:text="Test Vibrotactile feedback actuators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginTop="22dp"
        android:id="@+id/textView13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Bluetooth Adress:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="10dp"
            />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:text="00:13:43:0A:DB:F0"
            android:id="@+id/et_bluetoothAdress" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:text="Connect"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="onClick_ConnectBluetooth"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">


        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_left"
            android:onClick="onClick_left"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"/>

        <Button
            android:text="Test All"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/button_testAll"
            android:onClick="onClick_testAll"
            android:layout_weight="2"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/button_right"
            android:onClick="onClick_right"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:id="@+id/button_down_1"
        android:onClick="onClick_downLeft"
        android:layout_weight="1"
        android:layout_marginRight="5dp"/>

        <Button
        android:layout_width="72.5dp"
        android:layout_height="match_parent"
        android:id="@+id/button_down_2"
        android:onClick="onClick_downCenter1"
        android:layout_weight="1"
        android:layout_marginRight="5dp"/>

        <Button
        android:layout_width="72.5dp"
        android:layout_height="match_parent"
        android:id="@+id/button_down_3"
        android:onClick="onClick_downCenter2"
        android:layout_weight="1"
        android:layout_marginRight="5dp"/>

        <Button
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:id="@+id/button_down_4"
        android:onClick="onClick_downRight"
        android:layout_weight="1" />
    </LinearLayout>






</LinearLayout>
